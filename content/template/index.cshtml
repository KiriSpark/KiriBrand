<link rel="stylesheet" href="@Model.GetRelativePath(" static/css/home.css ")">
<link rel="stylesheet" href="@Model.GetRelativePath(" static/css/custom/cust_home.css ")">
<link rel="stylesheet" href="@Model.GetRelativePath(" static/css/custom/timeline.css ")">

<!--title and menus area -->
<header>
    <section>
        <div class="row">
                <div id="title_lang">
                    
                    <div class="btn-group">
                        <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-globe fa-2x"></i> 
                    </button>
                        <div class="dropdown-menu dropdown-menu-right color-3">
                            <a class="dropdown-item" href="/">English</a>
                            <a class="dropdown-item" href="/fr/index.html">Fran√ßais</a>
                        </div>
                    </div>
                </div>
        </div>
        <div class="container-fluid">            
            <div id="title_header" class="row no-gutters">
                <div id="title_picture" class="col-sm-4 no-gutters"></div>
                <div class="col-sm-8 no-gutters">
                    <div class="row no-gutters">
                        <div class="col no-gutters">
                            <div id="title_name" class="row no-gutters">@Raw(@Model.ConvertMdContent(@Model.Home.Title))</div>
                            <div id="title_description" class="row no-gutters">@Raw(@Model.ConvertMdContent(@Model.Home.TitleDescription))</div>
                            <div id="title_actionlist" class="row no-gutters">
                                @{ foreach(var menu in @Model.Home.TitleMenus) {
                                <div class="col-sm-4">
                                    <div id="nav-@menu.Id" class="nav-item text-center">
                                        @Raw(@Model.ConvertMdContent(@menu.MdPath))
                                    </div>
                                </div>
                                } }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</header>

<!-- body sections area -->
<div class="container-fluid">
    <div class="row">
        @{ foreach(var bsection in @Model.Home.BodySections) {
        <div id="section_@bsection.Id" class="col spaced-section animated @bsection.CustomCss">
            <section>
                @Raw(@Model.ConvertMdContent(@bsection.MdPath))
            </section>
        </div>
        } }
    </div>
</div>


<script src="@Model.GetRelativePath(" static/home.js ")"></script>